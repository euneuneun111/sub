<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<!-- member.picture -->
	<bean id="picturePath" class="java.lang.String"
		c:value="${savePath.member.picture}" />
	<!-- summernote.image -->
	<bean id="summernotePath" class="java.lang.String"
		c:value="${savePath.summernote.image}" />
	<!-- pds files -->
	<bean id="pdsSavedFilePath" class="java.lang.String"
		c:value="${savePath.pds.files}" />

	<!-- log saved path -->
	<bean id="logSavedPath" class="java.lang.String"
		c:value="${savePath.log.files}" />

	<!-- Repository -->
	<bean id="memberDAO" class="com.application.dao.MemberDAOImpl"
		c:session-ref="sqlSession" />
	<bean id="menuDAO" class="com.application.dao.MenuDAOImpl"
		c:session-ref="sqlSession" />
	<bean id="noticeDAO" class="com.application.dao.NoticeDAOImpl"
		c:session-ref="sqlSession" />
	<bean id="boardDAO" class="com.application.dao.BoardDAOImpl"
		c:session-ref="sqlSession" />

	<!-- Service -->
	<bean id="noticeService"
		class="com.application.service.NoticeServiceImpl"
		c:noticeDAO-ref="noticeDAO" />
	<bean id="menuService"
		class="com.application.service.MenuServiceImpl"
		c:menuDAO-ref="menuDAO" />
	<bean id="memberService"
		class="com.application.service.MemberServiceImpl"
		c:memberDAO-ref="memberDAO" />
	<bean id="boardService"
		class="com.application.service.BoardServiceImpl"
		c:boardDAO-ref="boardDAO" 
		c:summernotePath="/resources/upload/summernote/"/>
</beans>
